<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:src="@drawable/ble_label"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mylightblue"
            android:layout_gravity="top"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/deviceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/device" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/deviceLabel"
            android:layout_centerVertical="true"
            android:text="@string/no_device"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:text="장치 검색"
            android:textColor="@color/white"
            android:background="@color/myblue"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:src="@drawable/top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mytransblue"
            />

        <ImageView
            android:id="@+id/bt_LedBtn"
            android:src="@drawable/bt1_disabled"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:layout_marginBottom="3dp"
            />
        <ImageView
            android:id="@+id/bt1_off"
            android:src="@drawable/bt1_off"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:visibility="gone"
            android:layout_marginBottom="3dp"
            />
        <ImageView
            android:id="@+id/bt1_on"
            android:src="@drawable/bt1_on"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:visibility="gone"
            android:layout_marginBottom="3dp"
            />
        <ImageView
            android:src="@drawable/top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mytransblue"
            />


        <ImageView
            android:id="@+id/bt_FumeBtn"
            android:src="@drawable/bt2_disabled"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:layout_marginBottom="3dp"
            />
        <ImageView
            android:id="@+id/bt2_off"
            android:src="@drawable/bt2_off"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:visibility="gone"
            android:layout_marginBottom="3dp"
            />
        <ImageView
            android:id="@+id/bt2_on"
            android:src="@drawable/bt2_on"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:visibility="gone"
            android:layout_marginBottom="3dp"
            />
        <ImageView
            android:src="@drawable/top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mytransblue"
            />


        <ImageView
            android:id="@+id/bt_FanBtn"
            android:src="@drawable/bt3_disabled"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:layout_marginBottom="3dp"
            />
        <ImageView
            android:id="@+id/bt3_off"
            android:src="@drawable/bt3_off"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:visibility="gone"
            android:layout_marginBottom="3dp"
            />
        <ImageView
            android:id="@+id/bt3_on"
            android:src="@drawable/bt3_on"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:visibility="gone"
            android:layout_marginBottom="3dp"
            />
        <ImageView
            android:src="@drawable/top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mytransblue"
            />

    </LinearLayout>
</LinearLayout>